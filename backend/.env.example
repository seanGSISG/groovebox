# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://groovebox:groovebox_dev_password@localhost:5432/groovebox

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=7d

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=60000

# Synchronization Settings
SYNC_BUFFER_MS=1000
SYNC_INTERVAL_IDLE_MS=30000
SYNC_INTERVAL_PLAYING_MS=10000
DRIFT_CHECK_INTERVAL_MS=5000
MAX_RTT_THRESHOLD_MS=1000

# Room Settings
MAX_ROOM_MEMBERS=50
MUTINY_THRESHOLD=0.51
DJ_COOLDOWN_MINUTES=5

# Spotify (optional - for music integration)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key

# CORS
CORS_ORIGIN=http://localhost:19006,http://localhost:19000

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
